{
  // #region Workbench
  "workbench.colorTheme": "Aura Dark",
  "workbench.iconTheme": "symbols",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.location": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": "single",
  "workbench.colorCustomizations": {
    "[Omni]": {
      "editorSuggestWidget.selectedBackground": "#4d3091"
    },
    "[Aura Dark]": {
      "editorSuggestWidget.selectedBackground": "#3c2570"
    },

    "editorCursor.foreground": "#4b54ff",
    "editorCursor.background": "#ffffff",
    "editorRuler.foreground": "#0002",

    "errorLens.warningBackground": "#0000",
    "errorLens.errorBackground": "#0000",
    "errorLens.infoBackground": "#0000",
    "errorLens.hintBackground": "#0000",

    "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightForeground": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000",
    "editorOverviewRuler.findMatchForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editorOverviewRuler.warningForeground": "#0000",
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.errorForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.background": "#0000",
    "editorOverviewRuler.border": "#0000"
  },
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 16,
  "workbench.editor.decorations.badges": false,
  // #endregion

  "color-highlight.markRuler": false,
  "breadcrumbs.enabled": false,

  // #region Zen Mode
  "zenMode.fullScreen": true,
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideActivityBar": true,
  "zenMode.silentNotifications": true,
  "zenMode.showTabs": "single",
  // #endregion

  // #region Window
  "window.restoreFullscreen": true,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "auto",
  "window.titleBarStyle": "custom",
  // #endregion

  // #region Editor
  "editor.fontFamily": "JetBrains Mono Medium",
  "editor.fontWeight": "200",
  "editor.fontSize": 14,
  "editor.lineHeight": 2.5, // 2.5 or 1.8
  "editor.rulers": [80, 120],
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.renderLineHighlight": "gutter",
  "editor.fontLigatures": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.accessibilitySupport": "off",
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorBlinking": "solid",
  "editor.lightbulb.enabled": "off",
  "editor.showFoldingControls": "never",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": false,
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "ㅤ": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // #endregion

  "extensions.ignoreRecommendations": true,

  // #region Explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.cpp": "${basename}.exe",
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, yarn.lock, eslint.config.mjs, .prettierrc",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDelete": false,
  // #endregion

  // #region Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.external.linuxExec": "tilix",
  "terminal.integrated.env.linux": {},
  "terminal.integrated.env.windows": {},
  "terminal.integrated.env.osx": {},
  // #endregion

  // #region Vim
  "vim.leader": "<space>",
  "vim.timeout": 3000,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-j>": false,
    "<C-w>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.normalModeKeyBindings": [
    {
      // :
      // Change CMD Line to Quick Pick
      "before": [":"],
      "commands": ["vim.showQuickpickCmdLine"],
      "silent": true
    },
    {
      // Space + e
      // Focus Files Explorer
      "before": ["<leader>", "e"],
      "commands": ["workbench.explorer.fileView.focus"],
      "silent": true
    },
    {
      // Space + E
      // Show/Hide Files Explorer
      "before": ["<leader>", "<s-e>"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "silent": true
    },
    {
      // Space + space
      // Go to File...
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    {
      // ; + ;
      // Show all opened editors
      "before": [";", ";"],
      "commands": ["workbench.action.showAllEditors"],
      "silent": true
    },
    {
      "before": ["<leader>", "g", "s"],
      "commands": ["workbench.action.gotoSymbol"],
      "silent": true
    },
    {
      // Space + b + m
      // Add a bookmark
      "before": ["<leader>", "b", "m"],
      "commands": ["bookmarks.toggle"],
      "silent": true
    },
    {
      // Space + b + l
      // List the bookmarks
      "before": ["<leader>", "b", "l"],
      "commands": ["bookmarks.list"],
      "silent": true
    },
    {
      // +
      // Increment number on the cursor
      "before": ["+"],
      "after": ["<C-a>"]
    },
    {
      // -
      // Decrement number on the cursor
      "before": ["-"],
      "after": ["<C-x>"]
    },
    {
      // ; + '
      // Surround a word with single quotes
      "before": [";", "'"],
      "after": ["y", "s", "i", "w", "'", "E"]
    },
    {
      // ; + "
      // Surround a word with double quotes
      "before": [";", "\""],
      "after": ["y", "s", "i", "w", "\""]
    },
    {
      // ; + r + '
      // Remove single quotes from a word
      "before": [";", "r", "'"],
      "after": ["d", "s", "'"]
    },
    {
      // ; + r + "
      // Remove double quotes from a word
      "before": [";", "r", "\""],
      "after": ["d", "s", "\""]
    },
    {
      // ; + ]
      // Surround a word with brackets
      "before": [";", "]"],
      "after": ["y", "s", "i", "w", "]"]
    },
    {
      // ; + r + ]
      // Remove brackets from a word
      "before": [";", "r", "]"],
      "after": ["d", "s", "]"]
    },
    {
      // ; + }
      // Surround a word with braces
      "before": [";", "}"],
      "after": ["y", "s", "i", "w", "}"]
    },
    {
      // ; + r + }
      // Remove braces from a word
      "before": [";", "r", "}"],
      "after": ["d", "s", "}"]
    },
    {
      // ; + )
      // Surround a word with parenthesis
      "before": [";", ")"],
      "after": ["y", "s", "i", "w", ")"]
    },
    {
      // ; + r + )
      // Remove parenthesis from a word
      "before": [";", "r", ")"],
      "after": ["d", "s", ")"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      // Shift + k
      // Show Definition Preview Hover
      // https://github.com/VSCodeVim/Vim/issues/3740#issuecomment-2655837666
      "before": ["<S-k>"],
      "commands": [
        {
          "command": "editor.action.showDefinitionPreviewHover",
          "args": { "focus": true }
        }
      ],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      // Space + *
      // Bold a text
      "before": ["<leader>", "*"],
      "after": []
    },
    {
      // ; + '
      // Surround selection with single quotes
      "before": [";", "'"],
      "after": ["S", "'"]
    },
    {
      // ; + "
      // Surround selection with double quotes
      "before": [";", "\""],
      "after": ["S", "\""]
    },
    {
      // ; + r + '
      // Remove single quotes from selection
      "before": [";", "r", "'"],
      "after": ["d", "s", "'"]
    },
    {
      // ; + r + "
      // Remove double quotes from selection
      "before": [";", "r", "\""],
      "after": ["d", "s", "\""]
    },
    {
      // ; + ]
      // Surround selection with brackets
      "before": [";", "]"],
      "after": ["S", "]"]
    },
    {
      // ; + r + ]
      // Remove brackets from selection
      "before": [";", "r", "]"],
      "after": ["d", "s", "]"]
    },
    {
      // ; + }
      // Surround selection with braces
      "before": [";", "}"],
      "after": ["S", "}"]
    },
    {
      // ; + r + }
      // Remove braces from selection
      "before": [";", "r", "}"],
      "after": ["d", "s", "}"]
    },
    {
      // ; + )
      // Surround selection with parenthesis
      "before": [";", ")"],
      "after": ["S", ")"]
    },
    {
      // ; + r + )
      // Remove parenthesis from selection
      "before": [";", "r", ")"],
      "after": ["d", "s", ")"]
    },
    {
      // ; + *
      // Bold selection
      "before": [";", "*"],
      "after": [":", "s"]
    }
  ],
  // #endregion

  // #region Discord Rich Presence
  "discord.lowerDetailsDebugging": "↪ {file_name}",
  "discord.smallImage": "Visual Studio Code",
  "discord.lowerDetailsEditing": "↪ {file_name}",
  "discord.largeImage": "{lang}",
  "discord.largeImageIdling": "or afk",
  "discord.lowerDetailsIdling": "{empty}",
  "discord.detailsIdling": "In Config File",
  "discord.detailsEditing": "Project: {workspace}",
  "discord.detailsDebugging": "Debugging {workspace}",
  "discord.suppressNotifications": true,
  // #endregion

  // #region Symbols
  "symbols.hidesExplorerArrows": true,
  "symbols.files.associations": {
    "*.module.ts": "nest",
    "*.guard.ts": "typescript",
    "*.spec.ts": "ts-test",
    "*.e2e-spec.ts": "ts-test",
    "vitest.config.e2e.ts": "vitest",
    "vitest.config.e2e.mts": "vitest",
    ".env-example": "gear",
    ".env.example": "gear"
  },
  // #endregion

  // #region Languages
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[cpp]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[c]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 8
  },
  // #endregion

  // #region Files
  "files.exclude": {
    "**/__pycache__": true
  },
  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // #endregion

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.triggerExpansionOnTab": true,

  // #region Git
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "scm.diffDecorations": "none",
  // #endregion

  // #region Web Development
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true,

  "tailwindCSS.experimental.classRegex": [
    ["[\"'`][^\"'`]*.*?[\"'`]", "[\"'`][^\"'`]*.*?[\"'`]"]
  ],
  // #endregion

  // #region C/C++
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.configureOnOpen": false,

  "cSpell.userWords": ["ryandvl"],
  "cSpell.enabled": false,
  // #endregion

  "console-ninja.featureSet": "Community",

  "emojisense.languages": {
    "markdown": true
  }
}
